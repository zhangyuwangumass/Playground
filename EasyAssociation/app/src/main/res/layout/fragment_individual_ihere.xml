<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_individual_ihere_background">

    <LinearLayout
        android:layout_width="@dimen/main_fragment_individual_ihere_password_display_layout_width"
        android:layout_height="@dimen/main_fragment_individual_ihere_password_display_layout_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/main_fragment_individual_ihere_password_display_margin">

        <ImageView
            android:id="@+id/fragment_individual_ihere_password_1"
            android:tag="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_fragment_individual_ihere_password_display_unit_margin"
            android:layout_weight="1"
            android:background="@android:color/background_dark" />

        <ImageView
            android:id="@+id/fragment_individual_ihere_password_2"
            android:tag="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_fragment_individual_ihere_password_display_unit_margin"
            android:layout_weight="1"
            android:background="@android:color/background_dark" />

        <ImageView
            android:id="@+id/fragment_individual_ihere_password_3"
            android:tag="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_fragment_individual_ihere_password_display_unit_margin"
            android:layout_weight="1"
            android:background="@android:color/background_dark" />

        <ImageView
            android:id="@+id/fragment_individual_ihere_password_4"
            android:tag="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_fragment_individual_ihere_password_display_unit_margin"
            android:layout_weight="1"
            android:background="@android:color/background_dark" />


    </LinearLayout>
    
    <TextView
        android:layout_width="@dimen/main_fragment_individual_ihere_facetoface_label_width"
        android:layout_height="@dimen/main_fragment_individual_ihere_facetoface_label_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/main_fragment_individual_ihere_facetoface_label_margin"
        android:gravity="center"
        android:text="面对面签到"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:background="@android:color/black"/>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/main_fragment_individual_ihere_keyboard_layout_margin">

        <ImageButton
            android:id="@+id/fragment_individual_ihere_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ihere_button_logo"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/fragment_individual_ihere_rednumber"
            android:tag="red"
            android:layout_width="@dimen/main_fragment_individual_ihere_number_unit_width"
            android:layout_height="@dimen/main_fragment_individual_ihere_number_unit_height"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@id/fragment_individual_ihere_button"
            android:layout_alignTop="@id/fragment_individual_ihere_button"
            android:background="@android:color/transparent"
            android:src="@drawable/number_red"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/fragment_individual_ihere_greennumber"
            android:tag="green"
            android:layout_width="@dimen/main_fragment_individual_ihere_number_unit_width"
            android:layout_height="@dimen/main_fragment_individual_ihere_number_unit_height"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/fragment_individual_ihere_button"
            android:layout_alignLeft="@id/fragment_individual_ihere_button"
            android:background="@android:color/transparent"
            android:src="@drawable/number_green"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/fragment_individual_ihere_yellownumber"
            android:tag="yellow"
            android:layout_width="@dimen/main_fragment_individual_ihere_number_unit_width"
            android:layout_height="@dimen/main_fragment_individual_ihere_number_unit_height"
            android:layout_marginTop="11dp"
            android:layout_marginStart="21dp"
            android:layout_below="@+id/fragment_individual_ihere_rednumber"
            android:layout_alignStart="@+id/fragment_individual_ihere_rednumber"
            android:background="@android:color/transparent"
            android:src="@drawable/number_yellow"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/fragment_individual_ihere_bluenumber"
            android:tag="blue"
            android:layout_width="@dimen/main_fragment_individual_ihere_number_unit_width"
            android:layout_height="@dimen/main_fragment_individual_ihere_number_unit_height"
            android:layout_marginTop="11dp"
            android:layout_marginRight="21dp"
            android:layout_below="@+id/fragment_individual_ihere_rednumber"
            android:layout_alignEnd="@+id/fragment_individual_ihere_purplenumber"
            android:background="@android:color/transparent"
            android:src="@drawable/number_blue"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/fragment_individual_ihere_purplenumber"
            android:tag="purple"
            android:layout_width="@dimen/main_fragment_individual_ihere_number_unit_width"
            android:layout_height="@dimen/main_fragment_individual_ihere_number_unit_height"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/fragment_individual_ihere_button"
            android:layout_alignTop="@id/fragment_individual_ihere_button"
            android:background="@android:color/transparent"
            android:src="@drawable/number_purple"
            android:scaleType="centerInside" />


    </RelativeLayout>


</LinearLayout>