<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:background="@android:color/transparent">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical|start"
            android:columnCount="4"
            android:rowCount="3">

                <ImageButton
                    android:id="@+id/chips_25"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_25"/>

                <ImageButton
                    android:id="@+id/chips_50"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_50"/>

                <ImageButton
                    android:id="@+id/chips_100"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_100"/>

                <ImageButton
                    android:id="@+id/chips_500"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_500"/>

                <ImageButton
                    android:id="@+id/chips_1000"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_1000"/>

                <ImageButton
                    android:id="@+id/chips_2500"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_2500"/>

                <ImageButton
                    android:id="@+id/chips_5000"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_5000"/>

                <ImageButton
                    android:id="@+id/chips_10000"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_10000"/>

                <ImageButton
                    android:id="@+id/chips_50000"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_50000"/>

                <ImageButton
                    android:id="@+id/chips_100000"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_100000"/>

                <ImageButton
                    android:id="@+id/chips_500000"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_500000"/>

                <ImageButton
                    android:id="@+id/chips_1000000"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chips_1000000"/>

        </GridLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="center_vertical|start">

                <ImageView
                    android:id="@+id/casino_bar_small_back"
                    android:layout_width="90dp"
                    android:layout_height="190dp"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/casion_bar_small"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@id/casino_bar_small_back"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:text="Bet Sum"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/bet_sum"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:text="Multiply"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/bet_multiplier"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                </LinearLayout>

        </RelativeLayout>

</LinearLayout>